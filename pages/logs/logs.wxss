.commodityScreen { width: 100%; height: 100%; position: fixed; top: 0; left: 0; background: #000; opacity: 0.2; overflow: hidden; z-index: 90; color: #fff;}
.commodityAttr_box { width: 100%; overflow: hidden; position: fixed; top: 100rpx; left: 0; z-index: 99; padding-top: 20rpx;font-size: 30rpx;}
.commodityAttr_box view{
    text-align: center;
    color:666;
    font-size: 35rpx;
    line-height: 40rpx;
}


.record_progress{
    position: relative;
}
.record_progress .progressTitle{
    position: absolute;
    left: 30rpx;
    top:20rpx;
    font-size: 50rpx;
    color:#8360B9;
}
.record_progress .day{
    position: absolute;
    bottom:10rpx;
    font-size: 50rpx;
    color:#8360B9;
    text-align: center;
    width: 100%;
}
.record_progress .day text{
    font-weight: bold;
    font-size: 45rpx;
    text-decoration: underline;
    padding: 0 10rpx;
}

.attend{
    width: 100%;
    position: fixed;
    bottom:0;
    left: 0; 
    z-index: 50;
    font-weight: bold;
    font-family: "微软雅黑";
}
.attend button{
    background: #3699ff;
    border-radius:0px;
    letter-spacing: 4rpx;
}


