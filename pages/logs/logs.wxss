.record_progress{
    position: relative;
    background: #d7ebff;
}
.record_progress .proimg{
    position: absolute;
    top:0rpx;
    left: 0;
    z-index: 10;
}
.record_progress .imgbg{
    z-index: 1;
}
.record_progress  image{
    height: 480rpx;
    width:100%;
}

.dayBox{
    text-align: center;
    background:white;
    padding: 30rpx;
    font-size:40rpx;
    color:#333;
    padding-top: 0;
}
.dayBox text{
    color:#3699ff;
    font-size:50rpx;
}
.dayBox .successDay{
    font-size: 110rpx;
    border-bottom: 2px solid #3699ff;
    padding: 0 35rpx;
    margin: 0 10rpx;
}

.waitHintText {
    text-align: center;
    background: white;
    width: 100%;
    padding: 30rpx;
}
.waitHintText .tr{
    display: flex;
    
}
.waitHintText .tr button{
    padding:0 30rpx;
    color:#5ca8ff;
    vertical-align:middle;

}
.waitHintText .tr view{
    margin: 2rpx;
    padding: 15rpx;
    width: 202rpx;
    background: #cbe5ff;
    height:65rpx;
    padding-top:0;
    line-height:75rpx;
}
.waitHintText .thead view{
    background:#0594ea;
    color:white;
}

.waitHintText .hintText{
    font-size: 30rpx;
    color:#999;
    margin-bottom: 20rpx;
}

