.hint{
    text-align:center;
    font-size:35rpx;
    background:#eeeeee;
    height:100rpx;
    color:#888888;
    overflow:hidden;
    position:absolute;
    top:0;left:0;
    width:100%;
}
.hint image{
    width:80rpx;
    height:80rpx;
}

.bg{
    background: #f0eff5;
    overflow: hidden;
    font-family: "微软雅黑";
    width: 100%;
}
.head{
    overflow: hidden;
    background:url('http://qy.gzpeiyou.com/Public/60s/progressBg.png');
    width: 100%;
    height:665rpx;
    background-size: 100%;
}

.head .decade{
    color: #3699ff;
    font-size: 100rpx;
    z-index: 10;
    font-weight: bold;
    position: absolute;
    top:85rpx;
    left:360rpx; 
}
.head .one{
    color: #3699ff;
    font-size: 100rpx;
    z-index: 10;
    font-weight: bold;
    position: absolute;
    left:460rpx; 
    top:85rpx;
}

.dayProgress{
    overflow: hidden;
    margin:0 5%;
    margin-top: 275rpx;
    padding-left: 55rpx;
}
.dayProgress .proBg{
    display: block;
    width: 40rpx;
    height: 40rpx;
    line-height: 40rpx;
    border: 2px solid #0594ea;
    border-radius: 50%;
    background: #e1f0ff;
}
.dayProgress view{
    float:left;
    width: 85rpx;
    font-size: 25rpx;
    text-align: center;
    height: 87rpx;
}
.dayProgress view image{
    width:60rpx;
    height: 40rpx;
}
